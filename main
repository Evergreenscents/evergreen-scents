          <button onclick="addToBasket('V**ina With Piercing', 6.00)">Add to Basket</button>
        </div>
      </div>
    </div>

    <div class="checkout">
      <a href="basket.html">Go to Basket</a>
    </div>

  </main>

  <script>
    function toggleCategory(id) {
      const section = document.getElementById(id);
      section.style.display = section.style.display === "block" ? "none" : "block";
    }

    function addToBasket(name, price) {
      let basket = JSON.parse(localStorage.getItem("basket")) || [];
      basket.push({ name, price });
      localStorage.setItem("basket", JSON.stringify(basket));
      alert(name + " added to basket (£" + price.toFixed(2) + ")");
    }

    function addSelected(name, selectId) {
      const select = document.getElementById(selectId);
      const price = parseFloat(select.value);
      addToBasket(name, price);
    }

    function openAdultSection() {
      const confirmAdult = confirm("This section contains products for adults (18+) only. Are you 18 or older?");
      if (confirmAdult) {
        document.getElementById('adult').style.display = 'block';
      } else {
        alert("You must be over 18 to view this section.");
      }
    }
  </script>
</body>
</html>

